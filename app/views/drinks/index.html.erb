<p id="notice"><%= notice %></p>
<h1>Drinks</h1>
<% new_price %>
<h6><%=session[:start_time]%></h6>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Brand</th>
      <th>Quality</th>
      <th>Price</th>
      <th>Max price</th>
      <th>Min price</th>
      <th>Bar</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% @drinks.each do |drink| %>
      <tr>
        <td><%= drink.name %></td>
        <td><%= drink.brand %></td>
        <td><%= drink.quality %></td>
        <td><%= drink.price %></td>
        <td><%= drink.max_price %></td>
        <td><%= drink.min_price %></td>
        <td><%= drink.bar.name %></td>
        <td><%= link_to 'Show', drink %></td>
        <td><%= link_to 'Edit', edit_drink_path(drink) %></td>
        <td><%= link_to 'Destroy', drink, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Drink', new_drink_path %>
