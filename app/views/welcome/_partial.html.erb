<div class= "reload">

<!--- Buy Section -->
  <div class="beers">
    <section id="beer" class="container content-section text-center">
      <!-- <button type="button" name="button">reload thing</button> -->
      <table class="table">
        <thead>
          <tr class="top">
            <th style="text-align: center">Name</th>
            <th style="text-align: center">Bio</th>
            <th style="text-align: center">Price</th>
            <th style="text-align: center">Price Difference</th>
          </tr>
        </thead>
        <tbody>
          <% @drinks.each_with_index do |drink,i| %>
          <tr>
            <td class="drink"><%= drink.name %></td>
            <td class="drinks"><%= drink.bio %></td>
            <td class="drinkss">$<%= drink.current_price %></td>

            <% if drink.price_difference > 0 %>
            <td style= "color: green"><%= drink.price_difference %><i class="fa fa-arrow-up" id="up_arrow" aria-hidden="true"></i></td>
            <% elsif drink.price_difference < 0%>
            <td style= "color: red"> <%= drink.price_difference %><i class="fa fa-arrow-down" id="down_arrow" aria-hidden="true"></i></td>
            <% else %>
            <td><%= drink.price_difference %></td>
            <% end %>
            <td><%= link_to 'Buy', '#', remote: true, class: "btn btn-success", "data-toggle": "modal", "data-target": "#myModal#{i}" %></td>
          </tr>

          <div id="myModal<%=i%>" class="modal" role="dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Sign Up</h4>
              </div>
              <div class="modal-body">
                <%= form_tag payments_path, method: 'post', id: 'payment-form' do %>
                  <span class="payment-errors"></span>

                  <div class="form-row">
                    <label>
                      <span>Card Number</span>
                      <input type="text" size="20" data-stripe="number"/>
                    </label>
                  </div>

                  <div class="form-row">
                    <label>
                      <span>CVC</span>
                      <input type="text" size="4" data-stripe="cvc"/>
                    </label>
                  </div>

                  <div class="form-row">
                    <label>
                      <span>Expiration (MM/YYYY)</span>
                      <input type="text" size="2" data-stripe="exp-month"/>
                    </label>
                    <span> / </span>
                    <input type="text" size="4" data-stripe="exp-year"/>
                  </div>

                  <button type="submit">Submit Payment</button>
                <% end %>
                Buy A <%= drink.name %> for <%= drink.current_price %>
              </div>
            </div>
          </div>
          <% end %>
        </tbody>
      </table>
    </section>
  </div>
</div>
